<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp" >
	<TextView 
	    android:id="@+id/question_item_no"
	    android:layout_width="20dp"
	    android:layout_height="match_parent"
	    android:minLines="3"
	    android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
       android:textColor="#000000" 
	    />
    <TextView
        android:id="@+id/question_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/question_item_no"
        android:layout_toEndOf="@id/question_item_no"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/brown" />

    

    <TextView
        android:id="@+id/question_item_answer_true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/question_item_no"
        android:layout_toEndOf="@id/question_item_no"
        android:layout_below="@id/question_item_text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:visibility="gone"
        android:textColor="@color/dark_brown"
         android:textStyle="bold"
         />

</RelativeLayout>