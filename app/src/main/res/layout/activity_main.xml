<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mdrawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/mframe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/slidemenu_container"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/slidemenu_background_main" >


        <TextView
            android:id="@+id/text_click_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="Help"
            android:textColor="@color/list_item_unit_title"
            android:textSize="20sp"
             />

        <!--
             <TextView
            android:id="@+id/text_click_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/text_click_help"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="About"
            android:textColor="@color/list_item_unit_title"
            android:textSize="20sp" />
        -->

        <TextView
            android:id="@+id/text_click_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/text_click_help"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="Setting"
            android:textColor="@color/list_item_unit_title"
            android:textSize="20sp" />
    <TextView
            android:id="@+id/text_click_add_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/text_click_setting"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="Add/Change user"
            android:textColor="@color/list_item_unit_title"
            android:textSize="20sp" />    
        
        <ListView
            android:id="@+id/mlist_slidermenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/text_click_setting"
            android:choiceMode="singleChoice"
            android:divider="@color/list_divider"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_press" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>