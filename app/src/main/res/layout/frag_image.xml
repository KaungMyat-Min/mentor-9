<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    tools:cnotext=".SwipeViewActivity" >

    <TextView
        android:id="@+id/image_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:textColor="#bb000000"
        android:textSize="16sp" />

   

    <Button
        android:id="@+id/image_previous"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/button_pale"
        android:text="အရင္တစ္ပံု"
        android:textColor="#000000"
        
        android:textSize="17dp" />

    <Button
        android:id="@+id/image_detail_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_pale"
        android:text="Show Detial"
        android:textColor="#000000"
        android:textSize="17dp"
        android:visibility="invisible" />
    
    <Button
        android:id="@+id/image_next"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_pale"
        android:text="ေနာက္တစ္ပံု"
        android:textColor="#000000"
        android:textSize="17dp" />

    <WebView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/image_label"
        android:layout_above="@id/image_next"
        android:background="@color/main_background_color"
        
         />
    
 <LinearLayout 
     android:id="@+id/image_detail_container"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="#55c3c3c3"
     android:orientation="vertical">
 <ScrollView
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55c3c3c3" 
        android:layout_marginBottom="50dp"
        >

        <TextView
            android:id="@+id/image_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#55c3c3c3"
            android:textSize="20sp"
            android:padding="5dp"
            android:textColor="#000000"
            
             />
    </ScrollView>
    </LinearLayout>
</RelativeLayout>